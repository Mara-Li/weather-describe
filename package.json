{
	"name": "weather-describe",
	"version": "1.0.0",
	"description": "A TypeScript library that provides weather descriptions based on Open-Meteo API data, utilizing i18next for localization support.",
	"author": "Mara-Li",
	"license": "MIT",
	"keywords": [
		"weather",
		"open-meteo",
		"i18next",
		"localization",
		"typescript",
		"library"
	],
	"type": "module",
	"private": false,
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"commit-and-tag-version": {
		"t": ""
	},
	"scripts": {
		"prebuild": "tsc --noEmit",
		"build": "tsup",
		"lint": "biome format --write src/",
		"check": "tsc --noEmit",
		"test": "bun test",
		"release": "commit-and-tag-version"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.7",
		"@types/bun": "latest",
		"@types/node": "^24.9.1",
		"commit-and-tag-version": "^12.6.0",
		"tsup": "^8.5.0",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"i18next": "^25.6.0",
		"openmeteo": "^1.2.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18",
		"bun": ">=1.0.0"
	}
}
